# 데이터베이스 설정
MONGODB_URI=mongodb://localhost:27017/hireme

# JWT 설정
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Gemini API 설정
GOOGLE_API_KEY=your-gemini-api-key-here

# OpenAI API 설정
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORGANIZATION=your-openai-organization-id-here

# Azure OpenAI 설정 (선택사항)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here

# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# PDF OCR Module
# 외부 바이너리 경로(설치했다면 경로 지정)
TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe
POPLER_PATH=C:\tools\poppler-24.02.0\Library\bin

# Mongo/Vector 설정
MONGODB_DB=pdf_ocr
# Pinecone (VectorDB)
PINECONE_API_KEY=
PINECONE_INDEX_NAME=resume-vectors
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
L2_NORMALIZE_EMBEDDINGS=true
CHUNK_SIZE=800
CHUNK_OVERLAP=200
MIN_CHUNK_CHARS=20

# LLM provider defaults
LLM_PROVIDER=gemini
GOOGLE_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash